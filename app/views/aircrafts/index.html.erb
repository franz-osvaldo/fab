<table class="table">
  <thead>
    <tr>
      <th>Foto</th>
      <th>Nombre</th>
      <th>Numero de matricula</th>
      <th>Modelo</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @aircrafts.each do |aircraft| %>
      <tr>
        <td>Foto</td>
        <td><%= aircraft.name %></td>
        <td><%= aircraft.aircraft_registration %></td>
        <td><%= aircraft.model.model %></td>
        <td>
          <%= link_to aircraft, class: 'btn btn-info btn-sm' do %>
              <span class="glyphicon glyphicon-search"></span> Mostrar
          <% end %>
        </td>
        <td>
          <%= link_to edit_aircraft_path(aircraft), class:'btn btn-warning btn-sm' do %>
            <span class="glyphicon glyphicon-pencil"></span> Editar
          <% end %>
        </td>
        <td>
          <%= link_to aircraft, method: :delete, data: {confirm: 'Estas seguro?'}, class: 'btn btn-danger btn-sm' do %>
              <span class="glyphicon glyphicon-trash"></span> Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to new_aircraft_path, class: 'btn btn-success btn-sm' do %>
  <span class="glyphicon glyphicon-plus"></span> Agregar aeronave
<% end %>